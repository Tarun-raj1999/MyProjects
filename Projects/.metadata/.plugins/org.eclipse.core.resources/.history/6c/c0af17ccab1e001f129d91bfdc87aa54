package tarun.basic;

public class Pattern1 {

	public static void main(String[] args) {
		int line=4;
		
				
	  for(int i=0;i<=line;i++)
	  {
		 
		  for(int j=7;j<line;j--)
		  {
			  System.out.print(" ");		
			  
		  }
		  for(int j=0;j<=line;j++)
		  {
			  System.out.print("*");
			  
		  }
		  System.out.println("");
		  line=line*2-1;
	  }

	}

}
