package tarun.basic;

public class Pattern3 {

	public static void main(String[] args) {
		int n=7;
		int space=0;
		
		for(int row=0;row<n;row++)
		{
			for(int j=0;j<space;j++)
			{
				System.out.print(" ");
			}
			
			for(int col=n-row;col>=n;col--)
			{
				System.out.print(col);
			}
			System.out.println("");
			space++;
		}

	}

}
