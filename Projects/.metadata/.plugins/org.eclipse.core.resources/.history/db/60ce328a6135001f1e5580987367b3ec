package JDBCPackage;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;

public class UpdatedProcess {

	public UpdatedProcess(String name,int age,String gender,int id)
	{
		try {
			Class.forName("com.mysql.cj.jdbc.Driver");
			Connection con=DriverManager.getConnection("jdbc:mysql://localhost:3306/kalvibatch","root","");
			Statement st=con.createStatement();
			int i=st.executeUpdate("update  student set name='"+name+"',age='"+age+"',gender='"+gender+"' where id='"+id+"'");
		System.out.println(i);
			if(i==1)
			{
				System.out.println("updated!");
			}
			else
			{
				System.out.println("user not found");
			}
			con.close();
			
		}
		catch(ClassNotFoundException e){
			
			e.printStackTrace();
			
		}
		catch(SQLException e)
		{
			e.printStackTrace();
		}
	}
	public static void main(String[] args) {
		UpdatedProcess up=new UpdatedProcess("vijay",30,"male",105);
	}
}
