package tarun.basic;

public class Pattern1 {

	public static void main(String[] args) {
	int line=4;
	int space=0;
	
	
	for(int i=0;i<line;i++)
	{
		
		for(int j=0;j<space;j++)
		{
		System.out.print(" ");
		}
		for(int j=0;j<line;j++)
		{
			System.out.print("*");//7
		}
		System.out.println("");
			space++;
	 line=line*2-1;//7

	}

}
}
